<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tech News</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .bg-gradient-custom {
            background: linear-gradient(to right, #4f6d7a, #557a95, #6a9ba3);
        }
    </style>
</head>
<body class="font-sans bg-gradient-custom text-white">

    <!-- Hero Section -->
    <section class="py-16 px-6 text-center">
        <h1 class="text-4xl font-bold mb-4">Latest Tech News</h1>
        <p class="text-lg mb-6">Here are the latest advancements in the tech world!</p>
    </section>

    <!-- Tech News Section -->
    <section class="bg-white text-gray-800 py-16">
        <div class="container mx-auto px-6 md:px-12 max-w-4xl">
            <h2 class="text-2xl font-semibold text-center text-blue-600 mb-4">Trending Tech News</h2>

            <div id="techNews" class="space-y-4">
                <!-- Tech news will be dynamically populated here -->
            </div>
        </div>
    </section>

    <footer class="bg-gray-900 py-6 text-center text-white">
        <p>&copy; 2024 Tech News. All Rights Reserved.</p>
    </footer>

    <script>
        // Sample data for tech news
        const latestTechNews = [
            {
                title: "AI Chatbots Revolutionizing Customer Service",
                image: "/img/ai.jpeg",
                link: "https://www.netguru.com/blog/ai-chatbots-improving-customer-service"
            },
            {
                title: "Breakthroughs in Quantum Computing",
                image: "/img/Quantum.jpeg",
                link: "https://www.sify.com/technology/the-latest-breakthroughs-in-quantum-computing/"
            },
            {
                title: "Advancements in Renewable Energy Storage",
                image: "/img/Renewable.jpeg",
                link: "https://green.org/2024/03/07/unlocking-the-future-the-latest-advances-in-renewable-energy/"
            },
            {
                title: "5G Technology Expanding Connectivity Globally",
                image: "/img/5g.jpeg",
                link: "https://krce.ac.in/blog/enhancing-connectivity-through-5g-technology-and-its-impact-on-communication-networks/"
            },
            {
                title: "Blockchain Applications in Supply Chain Management",
                image: "/img/Supply Chain.jpeg",
                link: "https://www.turing.com/resources/blockchain-for-supply-chains"
            }
        ];

        // Get email parameter from the URL (if passed)
        const urlParams = new URLSearchParams(window.location.search);
        const userEmail = urlParams.get('email');

        // Display a greeting message with the user's email
        const greetingMessage = document.createElement('p');
        greetingMessage.textContent = `Thank you for subscribing, ${userEmail}!`;
        greetingMessage.classList.add('text-xl', 'text-center', 'mb-6');
        document.body.insertBefore(greetingMessage, document.querySelector('.bg-white'));

        // Load tech news dynamically on page load
        window.onload = function () {
            const techNewsContainer = document.getElementById('techNews');

            latestTechNews.forEach(news => {
                const newsItem = `
                    <div class="flex items-center bg-gray-100 p-4 rounded-lg shadow">
                        <img src="${news.image}" alt="${news.title}" class="w-16 h-16 rounded-lg mr-4">
                        <a href="${news.link}" target="_blank" class="text-blue-600 font-medium hover:underline">
                            ${news.title}
                        </a>
                    </div>
                `;
                techNewsContainer.innerHTML += newsItem;
            });
        };
    </script>
</body>
</html>
